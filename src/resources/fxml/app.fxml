<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<!--change the path here if the style does not get apply.-->
<VBox stylesheets="/resources/css/main.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.App"
      fx:id="container">
    <children>

        <Label fx:id="title" text="The greatest common divider"/>
        <TextField fx:id="textField1" promptText="Enter the first number" />
        <TextField fx:id="textField2" promptText="Enter the second number"/>
        <Button styleClass="buttons" text="Calculate" onAction="#calc"/>


    <VBox  fx:id="feedbackContainer" visible="false">

        <Label fx:id="feedback"   text=""/>
        <Label fx:id="result" styleClass="succeed"  text=""/>

        </VBox>

    </children>
</VBox>
